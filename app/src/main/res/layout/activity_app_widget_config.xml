<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppWidgetConfig">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kapı / Sistemi Seçiniz"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="#666"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <Spinner
        android:id="@+id/secim_spinner"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="37dp"
        android:background="#FFF"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.116"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

    </Spinner>

    <Button
        android:id="@+id/button"
        android:layout_width="91dp"
        android:layout_height="57dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="36dp"
        android:onClick="confirmConfiguration"
        android:text="Kaydet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

    </Button>

    <EditText
        android:id="@+id/edit_text_button"
        android:layout_width="156dp"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true"
        android:hint="Yeni Şifre Giriniz"
        android:inputType="numberPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <Button
        android:id="@+id/auto_button"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:text="Herhangi birine Bağlan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_button"
        app:layout_constraintVertical_bias="0.123"
        >

    </Button>

    <EditText
        android:id="@+id/auto_pass"
        android:layout_width="145dp"
        android:layout_height="0dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="54dp"
        android:inputType="numberPassword"

        android:layout_marginEnd="138dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/auto_button">

    </EditText>

    <TextView
        android:id="@+id/test"
        android:layout_width="312dp"
        android:layout_height="135dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/auto_button">

    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>