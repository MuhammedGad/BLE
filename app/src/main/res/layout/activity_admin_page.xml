<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6d76b7"
    tools:context=".admin.AdminPage">

    <TextView
        android:id="@+id/wrkumandayazı"
        android:layout_width="187dp"
        android:layout_height="41dp"
        android:layout_marginTop="50dp"
        android:text="WRKumanda"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="27dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <Spinner
        android:id="@+id/dialogs"
        android:layout_width="32dp"
        android:layout_height="39dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/setting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </Spinner>

    <ImageButton
        android:id="@+id/eslesmeizin"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/rounded_edittext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintTop_toTopOf="parent">

    </ImageButton>

    <ImageView
        android:id="@+id/erisimizinresmi"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:background="#FFF"
        android:src="@drawable/bluetoothgri"
        app:layout_constraintStart_toStartOf="@+id/eslesmeizin"
        app:layout_constraintBottom_toBottomOf="@+id/eslesmeizin"
        app:layout_constraintTop_toTopOf="@+id/eslesmeizin" >

    </ImageView>

    <ImageView
        android:id="@+id/erisimizinresmiiki"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_marginStart="45dp"
        android:background="#FFF"
        android:src="@drawable/wifigri"
        app:layout_constraintStart_toStartOf="@+id/eslesmeizin"
        app:layout_constraintTop_toTopOf="@+id/eslesmeizin"
        app:layout_constraintBottom_toBottomOf="@+id/eslesmeizin">

    </ImageView>

    <TextView
        android:id="@+id/eslesmeac"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="300dp"
        android:text="Eşleşme İznini Aç"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <ImageButton
        android:id="@+id/servisizin"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/rounded_edittext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintTop_toTopOf="parent">

    </ImageButton>

    <ImageView
        android:id="@+id/servisizinresmi"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:background="#FFF"
        android:src="@drawable/servisgri"
        app:layout_constraintStart_toStartOf="@+id/servisizin"
        app:layout_constraintTop_toTopOf="@+id/servisizin"
        app:layout_constraintBottom_toBottomOf="@+id/servisizin">

    </ImageView>

    <TextView
        android:id="@+id/servisver"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginTop="300dp"
        android:layout_marginStart="155dp"
        android:text="Servise İzin Verin"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <ImageButton
        android:id="@+id/eslesmeizinkapat"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="290dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/rounded_edittext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintTop_toTopOf="parent">

    </ImageButton>

    <ImageView
        android:id="@+id/erisimizinsiz"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:background="#FFF"
        android:src="@drawable/bluetoothgri"
        app:layout_constraintStart_toStartOf="@+id/eslesmeizinkapat"
        app:layout_constraintTop_toTopOf="@+id/eslesmeizinkapat"
        app:layout_constraintBottom_toBottomOf="@+id/eslesmeizinkapat">

    </ImageView>

    <ImageView
        android:id="@+id/erisimizinsiziki"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_marginStart="45dp"
        android:background="#FFF"
        android:src="@drawable/wifigri"
        app:layout_constraintStart_toStartOf="@+id/eslesmeizinkapat"
        app:layout_constraintBottom_toBottomOf="@+id/eslesmeizinkapat"
        app:layout_constraintTop_toTopOf="@+id/eslesmeizinkapat">

    </ImageView>

    <ImageView
        android:id="@+id/erisimizinsizuc"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginStart="58dp"
        android:background="#FFF"
        android:src="@drawable/closekirmizi"
        app:layout_constraintTop_toTopOf="@+id/eslesmeizinkapat"
        app:layout_constraintStart_toStartOf="@+id/eslesmeizinkapat"
        app:layout_constraintBottom_toBottomOf="@+id/eslesmeizinkapat">

    </ImageView>

    <TextView
        android:id="@+id/eslesmekapat"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginTop="300dp"
        android:layout_marginStart="275dp"
        android:text="Eşleşme İznini Kapat"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent">

    </TextView>

    <ListView
        android:id="@+id/user_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:choiceMode="singleChoice"

        android:clickable="true"
        android:divider="@android:color/black"
        android:dividerHeight="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:focusable="true">

    </ListView>

</androidx.constraintlayout.widget.ConstraintLayout>